<Window x:Class="CoreWpfApp.TestDateTimePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreWpfApp"
        xmlns:utilz="clr-namespace:UtilZ.Dotnet.WindowsDesktopEx.WPF.Controls;assembly=UtilZ.Dotnet.WindowsDesktopEx"
        mc:Ignorable="d"
        Title="TestDateTimePicker" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <utilz:DateTimePicker x:Name="dateTimePicker"/>

        <TextBlock Width="200" Height="30" Margin="0,100,0,0" Text="{Binding ElementName=dateTimePicker,Path=Value}"/>
    </Grid>
</Window>
